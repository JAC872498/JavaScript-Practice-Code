/*https://en.wikipedia.org/wiki/6174_(number)*/

function KapConstant(num) { 
    var times=0;
    while((""+num).length<4){
      num="0"+num;
    }
    num=parseInt(num);
    while(num!=6174){
        times+=1;
        var numArrD=((((""+num).split("")).sort()).reverse()).join("");
        var numArrA=(((""+num).split("")).sort()).join("");
        num=numArrD-numArrA;
        console.log(numArrD-numArrA);
    }
    return(times);
}
console.log(KapConstant(2111));
